<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/splash"
        android:name="com.hari.tmdb.authentication.ui.SplashFragment"
        android:label="Slash">

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.hari.tmdb.authentication.ui.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/main"
        android:name="com.hari.tmdb.movie.ui.MainMovieFragment"
        android:label="MOOOV">

        <action
            android:id="@+id/action_movies_to_movieDetail"
            app:destination="@id/movieDetails"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/movies"
        android:name="com.hari.tmdb.movie.ui.MoviesFragment"
        android:label="MainMovieFragment" />

    <fragment
        android:id="@+id/movieDetails"
        android:name="com.hari.tmdb.movie.ui.MovieDetailFragment"
        android:label="{title}">
        <argument
            android:name="movieId"
            app:argType="integer" />

        <argument
            android:name="title"
            app:argType="string" />

        <action
            android:id="@+id/action_movieDetail_to_castingProfile"
            app:destination="@id/castingProfile" />
    </fragment>

    <fragment
        android:id="@+id/moviesPage"
        android:name="com.hari.tmdb.account.ui.MoviesPageFragment"
        android:label="Account">

        <argument
            android:name="page"
            app:argType="com.hari.tmdb.model.MoviePage" />


    </fragment>
    <fragment
        android:id="@+id/account"
        android:name="com.hari.tmdb.account.ui.AccountFragment"
        android:label="Account">

    </fragment>

    <fragment
        android:id="@+id/castingProfile"
        android:name="com.hari.tmdb.movie.ui.CastingDetailFragment"
        android:label="Cast Profile">

    </fragment>

</navigation>