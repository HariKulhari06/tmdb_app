<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/accounts_item_recycler"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start" />

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/top_banner"
            android:layout_width="0dp"
            android:layout_height="180dp"
            motion:layout_constraintBottom_toTopOf="@id/action_bar_view"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/avatar_imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/screen_space"
            motion:layout_constraintBottom_toBottomOf="@id/action_bar_view"
            motion:layout_constraintStart_toEndOf="@id/back_arrow"
            motion:layout_constraintTop_toTopOf="@id/action_bar_view" />

        <Constraint
            android:id="@+id/accounts_item_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/action_bar_view" />

        <Constraint
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_space"
            motion:layout_constraintBottom_toBottomOf="@+id/action_bar_view"
            motion:layout_constraintStart_toEndOf="@+id/avatar_imageView"
            motion:layout_constraintTop_toTopOf="@+id/action_bar_view" />

    </ConstraintSet>
</MotionScene>