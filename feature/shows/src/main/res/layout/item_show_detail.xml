<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="show"
            type="com.hari.tmdb.model.Show" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/item_show_detail_xml_constraintlayout_scene">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/screen_space" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/screen_space" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".45" />


        <ImageView
            android:id="@+id/poster_image"
            imageCornerRadius="@{15.0f}"
            tmdbPosterPath="@{show.posterPath}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/screen_between_view"
            android:layout_marginEnd="@dimen/screen_space"
            android:elevation="10dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,1:1.5"
            app:layout_constraintEnd_toEndOf="@id/guideline_center"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/show_poster" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{show.title}"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintBottom_toTopOf="@+id/director_text"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toTopOf="@+id/poster_image"
            tools:text="The Killing of Secred Dear" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/director_text"
            isVisible="@{show.createdBy!=null}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='@{@string/created_by + " "+show.createdBy}'
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/ratings"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <RatingBar
            android:id="@+id/ratings"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/yellow"
            android:rating="3"
            app:layout_constraintBottom_toTopOf="@+id/genre_text"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/director_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/genre_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{show.genre}"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/runtime_text"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/ratings"
            tools:text="Comedy / Romance / Action" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/runtime_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_space"
            android:text="1 hr 44 mins, ENG"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/network_text"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/genre_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/network_text"
            isVisible="@{show.networkLogoPath!=null}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_space"
            android:text="Network"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/poster_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/networ_logo"
            isVisible="@{show.networkLogoPath!=null}"
            tmdbLogoPath="@{show.networkLogoPath}"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/screen_space"
            android:tint="@color/color_on_surface_87"
            app:layout_constraintBottom_toBottomOf="@+id/network_text"
            app:layout_constraintStart_toEndOf="@+id/network_text"
            app:layout_constraintTop_toTopOf="@+id/network_text" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/summary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="?selectableItemBackground"
            android:ellipsize="end"
            android:text="@{show.summary}"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/poster_image"
            tools:text="New York in the 90s was amazing. So when the people of the sitcom making business wanted to make another comedy show, they wanted to have the setting in that city. And thus, Friends was born! Another US sitcom that spanned a whole decade, and one of the top 10 best comedy series." />


    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>